<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3" />


    <RelativeLayout
        android:id="@+id/rel_mc_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="我的订单" />

        <TextView
            style="@style/text_main"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_next"
            android:gravity="center"
            android:text="查看我的全部订单" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/but_mc_status0"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_order_status0"
            android:text="待付款" />

        <Button
            android:id="@+id/but_mc_status1"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_order_status1"
            android:text="待发货" />

        <Button
            android:id="@+id/but_mc_status2"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_order_status2"
            android:text="待收货" />

        <Button
            android:id="@+id/but_mc_status3"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_order_status3"
            android:text="已完成" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_main" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

</LinearLayout>
