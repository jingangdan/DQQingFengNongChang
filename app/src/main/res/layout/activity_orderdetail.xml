<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <com.dq.qingfengnc.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5F6E8B"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_od_status"
                    style="@style/text_white"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_od_pay_money"
                    style="@style/text_white"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/tv_od_dipatch_money"
                    style="@style/text_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_od_contact"
                        style="@style/text_adware"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left" />

                    <TextView
                        android:id="@+id/tv_od_addr"
                        style="@style/text_adware"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#666" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_od_shopname"
                    style="@style/text_adware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="left" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_order_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/view_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        style="@style/text_main"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="订单编号" />

                    <TextView
                        android:id="@+id/tv_od_ordersn"
                        style="@style/text_main"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        style="@style/text_main"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="商品小计" />

                    <TextView
                        android:id="@+id/tv_od_money"
                        style="@style/text_main"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        style="@style/text_main"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="运费" />

                    <TextView
                        android:id="@+id/tv_od_dispatch"
                        style="@style/text_main"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        style="@style/text_main"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="会员优惠" />

                    <TextView
                        android:id="@+id/tv_od_discount_money"
                        style="@style/text_main"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        style="@style/text_main"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="实付款（含运费）" />

                    <TextView
                        android:id="@+id/tv_od_pay_money1"
                        style="@style/text_main"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        style="@style/text_main"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="下单时间" />

                    <TextView
                        android:id="@+id/tv_od_createtime"
                        style="@style/text_main"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </com.dq.qingfengnc.view.MyScrollView>

</LinearLayout>
