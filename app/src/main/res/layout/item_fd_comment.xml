<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/psiv_item_comment_header"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/x64"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_adware"
                    android:id="@+id/tv_item_comment_rname"
                    android:text="德泉六合" />

                <TextView
                    style="@style/text_main"
                    android:id="@+id/tv_item_comment_addtime"
                    android:layout_marginTop="@dimen/x8"
                    android:text="" />
            </LinearLayout>

            <TextView
                style="@style/text_adware"
                android:textColor="#333333"
                android:id="@+id/tv_item_comment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:text="德泉六合" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x1"
        android:background="@color/view_main"/>

</LinearLayout>
