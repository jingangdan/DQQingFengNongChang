<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_sales_top"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="销量从高到低"
            android:textColor="@color/tv_color001"
            android:textSize="12dp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/view_main" />

        <TextView
            android:id="@+id/tv_price_low"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="价格从低到高"
            android:textSize="12dp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/view_main" />

        <TextView
            android:id="@+id/tv_price_top"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="价格从高到低"
            android:textSize="12dp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/view_main" />

        <TextView
            android:id="@+id/tv_comment_top"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="评价从高到低"
            android:textSize="12dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_main" />

    <com.dq.qingfengnc.refresh.PullToRefreshView
        android:id="@+id/ptrv_goodslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dq.qingfengnc.view.MyScrollView
            android:id="@+id/gv_goodslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lrv_goodslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null" />

                    <Button
                        android:id="@+id/but_gl_first"
                        style="@style/text_main"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kuang_style"
                        android:text="首页" />

                    <Button
                        android:id="@+id/but_gl_on"
                        style="@style/text_main"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kuang_style"
                        android:text="上一页" />

                    <Button
                        android:id="@+id/but_gl_next"
                        style="@style/text_main"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kuang_style"
                        android:text="下一页" />

                    <Button
                        android:id="@+id/but_gl_last"
                        style="@style/text_main"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kuang_style"
                        android:text="尾页" />

                    <Button
                        android:id="@+id/but_gl_jump"
                        style="@style/text_main"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kuang_style"
                        android:text="跳到" />

                    <EditText
                        android:id="@+id/et_gl_page"
                        style="@style/text_main"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kuang_style"
                        android:hint="1"
                        android:inputType="number" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="版权所有&#160;©德泉惠宝购物商城&#160;客服电话：15106390112（24小时在线）"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

        </com.dq.qingfengnc.view.MyScrollView>

    </com.dq.qingfengnc.refresh.PullToRefreshView>


</LinearLayout>
