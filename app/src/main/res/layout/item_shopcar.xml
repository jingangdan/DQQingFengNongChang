<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="5dp">

        <TextView
            style="@style/text_main"
            android:layout_alignParentLeft="true"
            android:text="惠宝商城"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/text_main"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="删除"
            android:visibility="gone" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/ck_chose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box_style"
                android:scaleX="0.6"
                android:scaleY="0.6" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/iv_show_pic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_toRightOf="@id/iv_show_pic"
            android:layout_weight="5"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_commodity_name"
                style="@style/text_adware"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="2"
                android:text="五颜六色的酒" />

            <TextView
                android:id="@+id/tv_cart_option"
                style="@style/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_main"
                android:text="￥390.00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_shopcart_productprice"
                style="@style/text_main"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="￥500.00"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_shopcart_sub"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/kuang_gary"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/ic_sub" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_show_num"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/kuang_style"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000" />

                <LinearLayout
                    android:id="@+id/lin_shopcart_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/kuang_gary"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@mipmap/ic_add" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>