<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>
        <item name="toolbarStyle" tools:ignore="NewApi">@style/MyToolBar</item>

        <!--隐藏ActionBar-->
        <item name="windowActionBar">false</item>
        <!--隐藏标题-->
        <item name="windowNoTitle">true</item>

        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">#fff</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">#fff</item>

        <!--自定义AlertDialog-->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>

    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#000000</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <!--左边边距-->
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="BaseDialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="custom_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <!--主界面底部-->
    <style name="lin_footer_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector</item>
    </style>

    <!--lin主样式-->
    <style name="lin_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--字体主样式-->
    <style name="text_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>

    </style>

    <!--广告字体-->
    <style name="text_adware">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/tv_color002</item>
        <item name="android:gravity">center</item>

    </style>

    <!--白色字体-->
    <style name="text_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>

    </style>

    <!--红色字体-->
    <style name="text_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#F15353</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="text_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/tv_color002</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>

    <!--商品详情下半部分-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--登录注册按钮-->
    <style name="but_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="pop_style">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--评价星星样式-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">22dp</item>

    </style>

    <!--图-->
    <style name="pic">
        <item name="android:src">@mipmap/mine_img</item>
        <item name="android:layout_width">@dimen/x240</item>
        <item name="android:layout_height">@dimen/x180</item>
    </style>

</resources>
